@using pg.demo.identity.login.Models.ViewModels
@model LoginViewModel

@{
	ViewData["Title"] = "Login";
}

<div class="row d-flex align-items-center justify-content-center">
	<div class="col-sm-12 col-md-12 offset-3 col-6 card p-3 m-2">
		<h2 class="text-center text-info">Login</h2>
		<form asp-action="login" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="mb-1">
				<label asp-for="UserName" class="form-label"></label>
				<input asp-for="UserName" class="form-control" />
				<span asp-validation-for="UserName" class="text-danger"></span>
			</div>
			<div class="mb-1">
				<label asp-for="Password" class="form-label"></label>
				<input asp-for="Password" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="mb-1 form-check">
				<label class="form-check-label">
					<input asp-for="RememberMe" class="form-check-input"/>@Html.DisplayNameFor(_ => _.RememberMe)
				</label>
			</div>
			<div class="row">
				<div class="col-8">
					<a asp-action="register" class="text-decoration-none float-start mt-2">Don't have account?</a>
				</div>
				<div class="col-4">
					<input type="submit" value="Init Session" class="btn btn-primary btn-sm float-end" />
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}